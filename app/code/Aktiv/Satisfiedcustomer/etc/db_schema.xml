<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="satisfied_customer" resource="default">
		<column xsi:type="int" name="id" padding="10" identity="true" unsigned="true" nullable="false" comment="Id"/>
		<column xsi:type="varchar" name="customer" length="255" nullable="true" comment="Customer Id"/>
		<column xsi:type="varchar" name="country" nullable="true" length="255" comment="Country name"/>
		<column xsi:type="varchar" name="manufecture" nullable="true" length="255" comment="Manufecture name"/>
		<column xsi:type="varchar" name="year" nullable="true" length="255" comment="Sold Year"/>
		<column xsi:type="varchar" name="main_field" nullable="true" length="255" comment="Type"/>
		<column xsi:type="varchar" name="video" nullable="true" length="255" comment="Video"/>
		<column xsi:type="varchar" name="sourceimage" nullable="true" length="255" comment="Source Image"/>
		<column xsi:type="varchar" name="image" nullable="true" length="255" comment="Image"/>
		<column xsi:type="varchar" name="text" nullable="true" length="255" comment="Text"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="id"/>
		</constraint>
		<index referenceId="SATISFIED_CUSTOMER_TEXT" indexType="fulltext">
    		<column name="text"/>
		</index>
	</table>
</schema>