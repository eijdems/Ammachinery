<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="page.main.title" destination="category.view.container" before="category.image" />
        <move element="columns.top" destination="content" before="category.products" />
        <referenceBlock name="catalog.compare.sidebar" remove="true" />
        <move element="category.cms" destination="content" after="category.products" />
    </body>
</page>
