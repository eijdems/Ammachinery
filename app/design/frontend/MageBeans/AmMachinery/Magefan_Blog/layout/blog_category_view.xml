<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="blog_default"/>
    <update handle="blog_post_list"/>
    <body>
        <attribute name="class" value="blog-index-index"/>
        <container name="custom.image.container" as="custom-image-container" htmlTag="div" htmlClass="custom-image-container">
        <container name="custom.blog.content.container" as="custom-blog-content-container" htmlTag="div" htmlClass="custom-blog-content-container">
        </container>
        </container> 
        <move element ="page.main.title" destination="custom.blog.content.container" before = "-"/>
        <move element ="blog.content" destination="custom.blog.content.container" after = "page.main.title"/>
        <move element ="blog.posts.list" destination="custom.blog.content.container" after = "blog.content" />
        <move element ="custom.image.container" destination="main" before = "-" />
        <move element ="custom.blog.content.container" destination="custom.image.container" before = "-" />

    </body>
</page>
