                console.log(event);
                console.log(event.item.index, event.item.count);
                var blogcalc = ( (event.item.index+event.page.size) / (event.item.count) ) * 100;
                console.log(blogcalc);
                
                $blogprogressBar
                  
                  .attr('aria-valuenow', blogcalc );
                
                $blogprogressBarLabel.css('background-size', blogcalc + '% 100%');
              });

              $blogslider.trigger('refresh.owl.carousel');
        });
    });
